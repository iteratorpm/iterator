= panel @panel_id, title: "Current Iteration/Backlog", velocity: true, add_story: true, close: true, actions: true do

  = render "iteration", iteration: @current_iteration

  - @current_iteration.stories do |i|
    = render partial: 'projects/stories/story', collection: i.stories, as: :story

  = render "projects/stories/form", story: @project.stories.new

  - @backlog_iterations.each do |i|
    = render "iteration", iteration: i

    - if i.stories.any?
      = render partial: 'projects/stories/story', collection: i.stories, as: :story

